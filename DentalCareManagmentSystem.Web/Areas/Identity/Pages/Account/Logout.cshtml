@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}



<div class="main-content">
    <div class="login-container">
        <h2>@ViewData["Title"]</h2>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <p class="mb-4">Are you sure you want to log out?</p>
                <button type="submit" class="btn-login">Log out</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
            <a asp-page="/Account/Login" class="btn-login mt-3 d-inline-block">Return to Login</a>
        }
    </div>
</div>

