@model List<DentalCareManagmentSystem.Application.DTOs.UserDto>

@{
    ViewData["Title"] = "Users Management";
}

<div class="container mt-4">

    <!-- 🔹 العنوان + زر الإضافة -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-users me-2"></i> Users Management
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-user-plus me-1"></i> Add New User
        </a>
    </div>

    <!-- 🔹 الكارد الرئيسي -->
    <div class="card shadow-sm border-0 rounded">
        <div class="card-header bg-primary text-white fw-semibold d-flex align-items-center">
            <i class="fas fa-list me-2"></i> All System Users
        </div>

        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle text-center">
                <thead class="table-light border-bottom">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    @{
                                        var roleClass = user.Role switch
                                        {
                                            "SystemAdmin" => "bg-danger",
                                            "Doctor" => "bg-success",
                                            "Receptionist" => "bg-info text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @roleClass">@user.Role</span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-box-open fa-lg mb-2 d-block"></i>
                                No users found in the system.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                responsive: true,
                language: {
                    search: "🔍 Search:",
                    lengthMenu: "Show _MENU_ users per page",
                    zeroRecords: "No matching users found",
                    info: "Showing _START_ to _END_ of _TOTAL_ users",
                    infoEmpty: "No users available",
                    infoFiltered: "(filtered from _MAX_ total users)"
                }
            });
        });
    </script>
}
