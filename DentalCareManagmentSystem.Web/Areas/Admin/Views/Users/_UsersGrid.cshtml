@using NonFactors.Mvc.Grid
@model IEnumerable<DentalCareManagmentSystem.Application.DTOs.UserDto>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.FullName)
            .Titled("Full Name")
            .Sortable(true)
            .Filterable(true);

        columns.Add(model => model.Email)
            .Titled("Email")
            .Sortable(true)
            .Filterable(true);

        columns.Add(model => model.Role)
            .Titled("Role")
            .Sortable(true)
            .Filterable(true);

        columns.Add(model => model.Id)
            .Titled("Actions")
            .Encoded(false)
            .RenderedAs(model =>
                Html.Raw($@"
                    <a href=""/Admin/Users/Edit/{model.Id}"" class=""btn btn-sm btn-warning me-1"">
                        <i class='fas fa-edit'></i> Edit
                    </a>
                    <a href=""/Admin/Users/Delete/{model.Id}"" class=""btn btn-sm btn-danger"">
                        <i class='fas fa-trash'></i> Delete
                    </a>"));
    })
    .Filterable()
    .Sortable()
    .Pageable()
)
