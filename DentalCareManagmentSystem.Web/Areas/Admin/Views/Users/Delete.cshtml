@model DentalCareManagmentSystem.Application.DTOs.UserDto

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="fas fa-exclamation-triangle fa-lg me-2"></i>
        <div>
            Are you sure you want to delete this user?
            <strong>This action cannot be undone.</strong>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">
            <i class="fas fa-user me-1 text-danger"></i> User Details
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Role:</strong> @Model.Role</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i> Confirm Delete</button>
        </div>
    </form>
</div>
