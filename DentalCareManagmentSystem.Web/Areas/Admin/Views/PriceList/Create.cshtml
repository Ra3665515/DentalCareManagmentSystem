@model DentalCareManagmentSystem.Application.DTOs.PriceListItemDto

@{
    ViewData["Title"] = "Create Price List Item";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 p-4">
        <h2 class="fw-bold text-primary mb-4">
            <i class="fas fa-plus-circle me-2"></i> Create Price List Item
        </h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-3 col-form-label fw-semibold"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control" placeholder="Enter treatment name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Category" class="col-sm-3 col-form-label fw-semibold"></label>
                <div class="col-sm-9">
                    <input asp-for="Category" class="form-control" placeholder="Enter category (e.g., Basic, Surgery)" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="DefaultPrice" class="col-sm-3 col-form-label fw-semibold"></label>
                <div class="col-sm-9">
                    <input asp-for="DefaultPrice" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="DefaultPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="IsActive" class="col-sm-3 col-form-label fw-semibold"></label>
                <div class="col-sm-9 d-flex align-items-center">
                    <input class="form-check-input me-2" asp-for="IsActive" checked="checked" />
                    <span class="text-muted">Active by default</span>
                </div>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
