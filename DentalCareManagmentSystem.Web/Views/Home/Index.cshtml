@model DentalCareManagmentSystem.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="text-center my-5">
    <h1 class="display-5 fw-bold text-primary">@Localizer["Welcome"]</h1>
    <p class="text-muted fs-5">@Localizer["Slogan"]</p>
</div>

<div class="row mt-4 g-4">
    <!-- Patients Card -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <i class="fas fa-user-injured fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Patients</h5>
                <p class="card-text">Manage patient records, appointments, and treatment plans.</p>
                <a asp-controller="Patients" asp-action="Index" class="btn btn-primary">Go to Patients</a>
            </div>
        </div>
    </div>

    <!-- Appointments Card -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                <h5 class="card-title">Appointments</h5>
                <p class="card-text">View and schedule appointments for your patients.</p>
                <a asp-controller="Appointments" asp-action="Index" class="btn btn-success">Go to Appointments</a>
            </div>
        </div>
    </div>

    <!-- Admin Panel Card -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <i class="fas fa-cogs fa-3x text-info mb-3"></i>
                <h5 class="card-title">Admin Panel</h5>
                <p class="card-text">Manage price lists, users, and system settings.</p>
                <a asp-area="Admin" asp-controller="PriceList" asp-action="Index" class="btn btn-info text-white">Go to Admin</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
}
