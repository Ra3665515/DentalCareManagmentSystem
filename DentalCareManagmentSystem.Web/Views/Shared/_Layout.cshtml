@using Microsoft.AspNetCore.Identity
@using DentalCareManagmentSystem.Domain.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/images/tooth.png" />
    <link rel="stylesheet" href="~/css/mvc-grid.css" />


    <title>@ViewData["Title"] - DentalCareManagmentSystem</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   
    <link rel="stylesheet" href="~/DentalCareManagmentSystem.Web.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light d-flex align-items-center justify-content-center fw-bold">
                <i class="fas fa-tooth text-primary me-2"></i> DentalCare Clinic
            </div>

            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Patients" asp-action="Index">Patients</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Appointments" asp-action="Index">Appointments</a>

                @if (SignInManager.IsSignedIn(User) && User.IsInRole("SystemAdmin"))
                {
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>

                    <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="Admin" asp-controller="PriceList" asp-action="Index">Price List</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                }
            </div>
        </div>

        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-primary" id="sidebarToggle" title="Toggle Menu">
                        <i class="fas fa-tooth"></i>
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-nav ms-3">
                        <div class="nav-item">
                            <div class="time-display bg-dark bg-opacity-25 rounded-3 p-2 text-center border border-light border-opacity-25">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    <div>
                                        <div class="time-text text-white fw-bold fs-6" id="navbarTime">
                                            @DateTime.Now.ToString("hh:mm tt")
                                        </div>
                                        <div class="date-text text-light opacity-75 small" id="navbarDate">
                                            @DateTime.Now.ToString("ddd, MMM dd")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Action("TodaysAppointments", "Appointments")">
                                    <i class="fas fa-calendar-day me-1"></i>
                                </a>
                            </li>
                            </li>
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Page content-->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/js/mvc-grid.js"></script>
    

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", event => {
            event.preventDefault();
            document.body.classList.toggle("sb-sidenav-toggled");
            localStorage.setItem("sb-sidenav-toggle", document.body.classList.contains("sb-sidenav-toggled"));
        });

        

            // SignalR connection for real-time notifications
            const notificationConnection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .configureLogging(signalR.LogLevel.Information)
                .build();

            notificationConnection.start()
                .then(() => {
                    console.log("SignalR connected for notifications");
                })
                .catch(err => console.error("SignalR connection error:", err));

            // Listen for new patients added to queue
            notificationConnection.on("AddPatientToQueue", (appointmentId, patientName, appointmentTime) => {
                console.log(`New patient added to queue: ${patientName}`);
                
                // Refresh notifications immediately
                loadNotifications();
                
                // Show a toast notification (optional)
                if (typeof showToast === 'function') {
                    showToast(`Patient ${patientName} added to queue`, 'success');
                }
            });

            // Listen for patient transfers
            notificationConnection.on("PatientTransferred", (appointmentId, patientName) => {
                console.log(`Patient transferred: ${patientName}`);
                loadNotifications();
            });

            // Listen for patient completion
            notificationConnection.on("PatientCompleted", (appointmentId, patientName) => {
                console.log(`Patient completed: ${patientName}`);
                loadNotifications();
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
