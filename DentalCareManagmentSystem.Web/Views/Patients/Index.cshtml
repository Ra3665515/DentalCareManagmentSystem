@model IEnumerable<DentalCareManagmentSystem.Application.DTOs.PatientDto>
@{
    ViewData["Title"] = "Patients";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="fas fa-users me-2"></i> Patients</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle me-1"></i> Add New Patient
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="fas fa-list me-2"></i> All Patients
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Age</th>
                            <th>Phone</th>
                            <th>Gender</th>
                            <th>Total Due</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>@patient.FullName</td>
                                <td>@patient.Age</td>
                                <td>@patient.Phone</td>
                                <td>@patient.Gender</td>
                                <td>@patient.TotalDue.ToString("C")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-info me-1">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>No patients found in the database.
                </div>
            }
        </div>
    </div>
</div>
