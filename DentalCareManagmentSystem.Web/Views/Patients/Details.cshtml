@model DentalCareManagmentSystem.Application.DTOs.PatientDto

@{
    ViewData["Title"] = "Patient Details";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="fas fa-user me-2"></i> @Model.FullName</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
        </div>
        <div class="col-md-6">
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
            <p><strong>Total Due:</strong> @Model.TotalDue.ToString("C")</p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="patientTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="diagnosis-tab" data-bs-toggle="tab" data-bs-target="#diagnosisContent">Diagnosis</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="treatment-tab" data-bs-toggle="tab" data-bs-target="#treatmentContent">Treatment Plans</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="images-tab" data-bs-toggle="tab" data-bs-target="#imagesContent">Images</button>
        </li>
    </ul>

    <div class="tab-content mt-3">
        <!-- Diagnosis Tab -->
        <div class="tab-pane fade show active" id="diagnosisContent">
            @if (User.IsInRole("Doctor"))
            {
                <form asp-action="AddNote" asp-controller="Diagnosis" method="post">
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <textarea name="note" class="form-control mb-2" rows="3" placeholder="Add a new diagnosis note..."></textarea>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add Note</button>
                </form>
            }
            <hr />
            <div>
                @foreach (var note in ViewBag.DiagnosisNotes as List<DentalCareManagmentSystem.Domain.Entities.DiagnosisNote>)
                {
                    <div class="mb-2 border p-2 rounded">
                        <small class="text-muted">@note.CreatedAt.ToString("yyyy-MM-dd")</small>
                        <p>@note.Note</p>
                        @if (User.IsInRole("Doctor"))
                        {
                            <form asp-action="Delete" asp-controller="Diagnosis" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@note.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Treatment Plans Tab -->
        <div class="tab-pane fade" id="treatmentContent">
            <h4>Treatment Plans</h4>

            @if (ViewBag.TreatmentPlans != null && (ViewBag.TreatmentPlans as List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto>).Any())
            {
                foreach (var plan in ViewBag.TreatmentPlans as List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto>)
                {
                    <div class="border p-3 mb-3 rounded">
                        <h5>Plan created at @plan.CreatedAt.ToString("yyyy-MM-dd HH:mm")</h5>
                        <p><strong>Total Cost:</strong> @plan.TotalCost.ToString("C")</p>
                        <p><strong>Status:</strong> @(plan.IsCompleted ? "Completed" : "Pending")</p>

                        <!-- Treatment Items Table -->
                        @if (plan.Items != null && plan.Items.Any())
                        {
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Item Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Line Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in plan.Items)
                                    {
                                        <tr>
                                            <td>@item.PriceListItemName</td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>
                                                <form method="post" asp-action="UpdateItemQuantity" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="itemId" value="@item.Id" />
                                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline w-auto" />
                                                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                                </form>
                                            </td>
                                            <td>@item.LineTotal.ToString("C")</td>
                                            <td>
                                                <form method="post" asp-action="DeleteItem" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="itemId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No items in this plan.</p>
                        }

                        <!-- Add Item Form -->
                        <form method="post" asp-action="AddItem" class="mt-2 d-flex gap-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="planId" value="@plan.Id" />
                            <select name="priceListItemId" class="form-select w-auto">
                                @if (ViewBag.PriceListItems != null)
                                {
                                    foreach (var plItem in ViewBag.PriceListItems)
                                    {
                                        <option value="@plItem.Id">@plItem.Name (@plItem.DefaultPrice.ToString("C"))</option>
                                    }
                                }
                            </select>
                            <input type="number" name="quantity" value="1" min="1" class="form-control w-auto" />
                            <button type="submit" class="btn btn-success">Add Item</button>
                        </form>

                        <!-- Complete Plan -->
                        <form method="post" asp-action="CompletePlan" class="mt-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="planId" value="@plan.Id" />
                            @if (!plan.IsCompleted)
                            {
                                <button type="submit" class="btn btn-success btn-sm">Mark as Completed</button>
                            }
                            else
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                        </form>
                    </div>
                }
            }
            else
            {
                <p>No treatment plans available.</p>
            }

            <!-- Create New Treatment Plan -->
            <form method="post" asp-controller="TreatmentPlans" asp-action="CreatePlan" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="patientId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Create New Treatment Plan</button>
            </form>
        </div>

        <!-- Images Tab -->
        <div class="tab-pane fade" id="imagesContent">
            @if (User.IsInRole("Doctor"))
            {
                <form asp-action="UploadPatientImage" asp-controller="Patients" method="post" enctype="multipart/form-data" class="mb-3 d-flex">
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <input type="file" name="imageFile" class="form-control me-2" accept="image/*" />
                    <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i> Upload Image</button>
                </form>
            }
            <div class="d-flex flex-wrap">
                @foreach (var img in ViewBag.PatientImages as List<DentalCareManagmentSystem.Domain.Entities.PatientImage>)
                {
                    <div class="me-3 mb-3 text-center">
                        <img src="@img.ThumbnailPath" class="img-thumbnail" width="150" /><br />
                        @if (User.IsInRole("Doctor"))
                        {
                            <form asp-action="DeletePatientImage" asp-controller="Patients" method="post">
                                <input type="hidden" name="patientId" value="@Model.Id" />
                                <input type="hidden" name="imageId" value="@img.Id" />
                                <button type="submit" class="btn btn-sm btn-danger mt-1">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>