@model DentalCareManagmentSystem.Application.DTOs.PatientDto

@{
    ViewData["Title"] = "Patient Details";
    var treatmentPlans = ViewBag.TreatmentPlans as List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto> ?? new List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto>();
    var priceListItems = ViewBag.PriceListItems as List<DentalCareManagmentSystem.Application.DTOs.PriceListItemDto> ?? new List<DentalCareManagmentSystem.Application.DTOs.PriceListItemDto>();
    var tempItems = ViewBag.TempItems as List<DentalCareManagmentSystem.Application.DTOs.TreatmentItemDto> ?? new List<DentalCareManagmentSystem.Application.DTOs.TreatmentItemDto>();
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="fas fa-user me-2"></i> @Model.FullName</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
        </div>
        <div class="col-md-6">
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
            <p><strong>Total Due:</strong> @($"{Model.TotalDue:N2} EGP")</p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="patientTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="diagnosis-tab" data-bs-toggle="tab" data-bs-target="#diagnosisContent">Diagnosis</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="treatment-tab" data-bs-toggle="tab" data-bs-target="#treatmentContent">Treatment Plans</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="images-tab" data-bs-toggle="tab" data-bs-target="#imagesContent">Images</button>
        </li>
    </ul>

    <div class="tab-content mt-3">
        <!-- Diagnosis Tab -->
        <div class="tab-pane fade show active" id="diagnosisContent">
            @if (User.IsInRole("Doctor"))
            {
                <form asp-action="AddNote" asp-controller="Diagnosis" method="post">
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <textarea name="note" class="form-control mb-2" rows="3" placeholder="Add a new diagnosis note..."></textarea>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add Note</button>
                </form>
            }
            <hr />
            <div>
                @foreach (var note in ViewBag.DiagnosisNotes as List<DentalCareManagmentSystem.Domain.Entities.DiagnosisNote>)
                {
                    <div class="mb-2 border p-2 rounded">
                        <small class="text-muted">@note.CreatedAt.ToString("yyyy-MM-dd")</small>
                        <p>@note.Note</p>
                        @if (User.IsInRole("Doctor"))
                        {
                            <form asp-action="Delete" asp-controller="Diagnosis" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@note.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Treatment Plans Tab -->
        <div class="tab-pane fade" id="treatmentContent">
            <h4>Treatment Plans</h4>

            <!-- Form لإضافة Treatment Item مؤقت -->
            @if (User.IsInRole("Doctor") && priceListItems.Any())
            {
                <form method="post" asp-action="AddItemTemp" asp-controller="TreatmentPlans" class="mb-3 d-flex gap-2 align-items-center">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="patientId" value="@Model.Id" />

                    <select name="priceListItemId" class="form-select w-auto">
                        @foreach (var item in priceListItems)
                        {
                            <option value="@item.Id">
                                @item.Name (@($"{item.DefaultPrice:N2} EGP"))
                            </option>

                        }
                    </select>

                    <input type="number" name="quantity" value="1" min="1" class="form-control w-auto" />
                    <button type="submit" class="btn btn-success btn-sm">Add Item</button>
                </form>
            }

            <!-- عرض الـ Items المؤقتة -->
            @if (tempItems.Any())
            {
                <h5>Items to be added to the new Plan</h5>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in tempItems)
                        {
                            <tr>
                                <td>@item.PriceListItemName</td>
                                <td>@($"{item.Price:N2} EGP")</td>
                                <td>@item.Quantity</td>
                                <td>@($"{item.LineTotal:N2} EGP")</td>

                            </tr>
                        }
                    </tbody>
                </table>

                <!-- زر إنشاء Treatment Plan -->
                <form method="post" asp-action="CreatePlanWithItems" asp-controller="TreatmentPlans">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">Create Treatment Plan</button>
                </form>
            }

            <!-- عرض كل Treatment Plans الموجودة -->
            @if (treatmentPlans.Any())
            {
                <h5 class="mt-4">Existing Treatment Plans</h5>
                @foreach (var plan in treatmentPlans)
                {
                    <div class="border p-3 mb-3 rounded">
                        <h6>Plan created at @plan.CreatedAt.ToString("yyyy-MM-dd HH:mm")</h6>
                        <p><strong>Total Cost:</strong> @plan.TotalCost.ToString("C")</p>
                        <p><strong>Status:</strong> @(plan.IsCompleted ? "Completed" : "Pending")</p>

                        @if (plan.Items.Any())
                        {
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Item Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Line Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in plan.Items)
                                    {
                                        <tr>
                                            <td>@item.PriceListItemName</td>
                                            <td>@($"{item.Price:N2} EGP")</td>
                                            <td>@item.Quantity</td>
                                            <td>@($"{item.LineTotal:N2} EGP")</td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                }
            }
            else
            {
                <p>No existing treatment plans.</p>
            }
        </div>

        <!-- Images Tab -->
        <div class="tab-pane fade" id="imagesContent">
            @if (User.IsInRole("Doctor"))
            {
                <form asp-action="UploadPatientImage" asp-controller="Patients" method="post" enctype="multipart/form-data" class="mb-3 d-flex">
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <input type="file" name="imageFile" class="form-control me-2" accept="image/*" />
                    <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i> Upload Image</button>
                </form>
            }
            <div class="d-flex flex-wrap">
                @foreach (var img in ViewBag.PatientImages as List<DentalCareManagmentSystem.Domain.Entities.PatientImage>)
                {
                    <div class="me-3 mb-3 text-center">
                        <img src="@img.ThumbnailPath" class="img-thumbnail" width="150" /><br />
                        @if (User.IsInRole("Doctor"))
                        {
                            <form asp-action="DeletePatientImage" asp-controller="Patients" method="post">
                                <input type="hidden" name="patientId" value="@Model.Id" />
                                <input type="hidden" name="imageId" value="@img.Id" />
                                <button type="submit" class="btn btn-sm btn-danger mt-1">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
