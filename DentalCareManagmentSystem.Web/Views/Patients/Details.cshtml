@model DentalCareManagmentSystem.Application.DTOs.PatientDto

@{
    ViewData["Title"] = "Patient Details";
    var treatmentPlans = ViewBag.TreatmentPlans as List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto> ?? new List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto>();
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="fas fa-user me-2"></i> @Model.FullName</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
        </div>
        <div class="col-md-6">
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
            <p><strong>Total Due:</strong> @($"{Model.TotalDue:N2} EGP")</p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="patientTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="treatment-tab" data-bs-toggle="tab" data-bs-target="#treatmentContent" type="button" role="tab">Treatment Plans</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="diagnosis-tab" data-bs-toggle="tab" data-bs-target="#diagnosisContent" type="button" role="tab">Diagnosis</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="images-tab" data-bs-toggle="tab" data-bs-target="#imagesContent" type="button" role="tab">Images</button>
        </li>
    </ul>

    <div class="tab-content mt-3">
        <!-- Treatment Plans Tab -  -->
        <div class="tab-pane fade show active" id="treatmentContent" role="tabpanel">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-3">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">Treatment Plans</h5>
                @if (User.IsInRole("Doctor"))
                {
                    <a href="@Url.Action("Create", "TreatmentPlans", new { patientId = Model.Id })"
                       class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Create New Plan
                    </a>
                }
            </div>

            @if (treatmentPlans.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Created Date</th>
                                <th>Created By</th>
                                <th>Total Cost</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var plan in treatmentPlans)
                            {
                                <tr>
                                    <td>@plan.CreatedAt.ToString("yyyy/MM/dd")</td>
                                    <td>@plan.CreatedBy</td>
                                    <td>@plan.TotalCost.ToString("N2") EGP</td>
                                    <td>
                                        @if (plan.IsCompleted)
                                        {
                                            <span class="badge bg-success"> Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">In Progress</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">

                                            @if (User.IsInRole("Doctor"))
                                            {
                                                <a asp-controller="TreatmentPlans"
                                                   asp-action="Details"
                                                   asp-route-id="@plan.Id"
                                                   class="btn btn-outline-info btn-sm"
                                                   title="View Details">
                                                    <i class="fas fa-eye me-1"></i>Details
                                                </a>
                                            }

                                            @if (!plan.IsCompleted && User.IsInRole("Doctor"))
                                            {
                                                <form method="post"
                                                      asp-controller="TreatmentPlans"
                                                      asp-action="CompletePlan"
                                                      class="d-inline">
                                                    <input type="hidden" name="planId" value="@plan.Id" />
                                                    <button type="submit" class="btn btn-outline-success"
                                                            onclick="return confirm('Are you sure you want to mark this plan as completed?');">
                                                        <i class="fas fa-check me-1"></i>Complete
                                                    </button>
                                                </form>
                                            }

                                            @if (User.IsInRole("Doctor"))
                                            {
                                                <form method="post"
                                                      asp-controller="TreatmentPlans"
                                                      asp-action="DeletePlanConfirmed"
                                                      class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this treatment plan?');">
                                                    <input type="hidden" name="id" value="@plan.Id" />
                                                    <button type="submit" class="btn btn-outline-danger">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </form>
                                            }
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i> No treatment plans found for this patient.
                </div>
            }
        </div>

        <!-- Diagnosis Tab -->
        <div class="tab-pane fade" id="diagnosisContent" role="tabpanel">
            @if (User.IsInRole("Doctor"))
            {
                <form asp-action="AddNote" asp-controller="Diagnosis" method="post">
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <textarea name="note" class="form-control mb-2" rows="3" placeholder="Add a new diagnosis note..."></textarea>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add Note</button>
                </form>
            }
            <hr />
            <div>
                @foreach (var note in ViewBag.DiagnosisNotes as List<DentalCareManagmentSystem.Domain.Entities.DiagnosisNote>)
                {
                    <div class="mb-2 border p-2 rounded">
                        <small class="text-muted">@note.CreatedAt.ToString("yyyy-MM-dd")</small>
                        <p>@note.Note</p>
                        @if (User.IsInRole("Doctor"))
                        {
                            <form asp-action="Delete" asp-controller="Diagnosis" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@note.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Images Tab -->
        <div class="tab-pane fade" id="imagesContent" role="tabpanel">
            @if (User.IsInRole("Doctor"))
            {
                <form asp-action="UploadPatientImage" asp-controller="Patients" method="post" enctype="multipart/form-data" class="mb-3 d-flex">
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <input type="file" name="imageFile" class="form-control me-2" accept="image/*" />
                    <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i> Upload Image</button>
                </form>
            }
            <div class="d-flex flex-wrap">
                @foreach (var img in ViewBag.PatientImages as List<DentalCareManagmentSystem.Domain.Entities.PatientImage>)
                {
                    <div class="me-3 mb-3 text-center">
                        <img src="@img.ThumbnailPath" class="img-thumbnail" width="150" /><br />
                        @if (User.IsInRole("Doctor"))
                        {
                            <form asp-action="DeletePatientImage" asp-controller="Patients" method="post">
                                <input type="hidden" name="patientId" value="@Model.Id" />
                                <input type="hidden" name="imageId" value="@img.Id" />
                                <button type="submit" class="btn btn-sm btn-danger mt-1">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var patientId = '@Model.Id';
            var tabStorageKey = 'patientTab_' + patientId;

            var savedTab = localStorage.getItem(tabStorageKey);
            if (savedTab) {
                var tab = new bootstrap.Tab(document.querySelector(savedTab));
                tab.show();
            }

            var tabEls = document.querySelectorAll('#patientTabs button[data-bs-toggle="tab"]');
            tabEls.forEach(function(tabEl) {
                tabEl.addEventListener('shown.bs.tab', function (event) {
                    localStorage.setItem(tabStorageKey, event.target.getAttribute('data-bs-target'));
                });
            });

            var triggerTabList = [].slice.call(document.querySelectorAll('#patientTabs button'));
            triggerTabList.forEach(function (triggerEl) {
                var tabTrigger = new bootstrap.Tab(triggerEl);
                triggerEl.addEventListener('click', function (event) {
                    event.preventDefault();
                    tabTrigger.show();
                });
            });
        });

        function clearSavedTab() {
            var patientId = '@Model.Id';
            var tabStorageKey = 'patientTab_' + patientId;
            localStorage.removeItem(tabStorageKey);
        }
    </script>
}