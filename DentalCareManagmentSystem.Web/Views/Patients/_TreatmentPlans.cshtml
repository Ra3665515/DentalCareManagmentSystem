@model List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto>

@foreach (var plan in Model)
{
    <div style="border:1px solid #ccc; padding:10px; margin-bottom:10px;">
        <strong>Plan created at:</strong> @plan.CreatedAt.ToString("yyyy-MM-dd")
        <ul>
            @foreach (var item in plan.Items)
            {
                <li>@item.Name - @item.Quantity x @item.Price = @item.LineTotal</li>
            }
        </ul>
        <p><strong>Total:</strong> @plan.TotalCost</p>
    </div>
}
