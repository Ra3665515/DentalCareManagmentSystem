@model DentalCareManagmentSystem.Application.DTOs.AppointmentDto

@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-calendar-edit me-2"></i> Edit Appointment
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light fw-semibold">
                    <i class="fas fa-pen me-2 text-primary"></i> Appointment Information
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label fw-semibold">
                                <i class="fas fa-user me-1 text-secondary"></i> Patient
                            </label>
                            <select asp-for="PatientId" class="form-select" asp-items="ViewBag.Patients"></select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label fw-semibold">
                                <i class="fas fa-calendar-day me-1 text-secondary"></i> Date
                            </label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                      
                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label fw-semibold">
                                <i class="fas fa-clock me-1 text-secondary"></i> Start Time
                            </label>
                            <input asp-for="StartTime" class="form-control" type="time" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        
                        <div class="mb-4">
                            <label asp-for="Status" class="form-label fw-semibold">
                                <i class="fas fa-clipboard-list me-1 text-secondary"></i> Status
                            </label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<DentalCareManagmentSystem.Domain.Enums.AppointmentStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle me-2"></i>
                Please double-check the appointment date and time before saving.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
