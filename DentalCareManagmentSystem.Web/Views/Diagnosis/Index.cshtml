@model IEnumerable<DentalCareManagmentSystem.Domain.Entities.DiagnosisNote>

@{
    ViewData["Title"] = "Diagnosis Notes";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-notes-medical me-2"></i>Diagnosis Notes</h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle"></i> Add Note
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover mvc-grid">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Note</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var note in Model)
                    {
                        <tr>
                            <td>@note.Patient?.FullName</td>
                            <td>@note.Doctor?.FullName</td>
                            <td>@note.Note</td>
                            <td>@note.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
