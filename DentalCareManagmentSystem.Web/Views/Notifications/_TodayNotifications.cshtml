@model List<DentalCareManagmentSystem.Application.DTOs.NotificationDto>


@if (Model == null || !Model.Any())
{
    <div class="text-center text-muted py-4">
        <i class="fas fa-check-circle fa-3x mb-2 text-success"></i>
        <p class="fs-6">No notifications for today </p>
        <a href="/Notifications/Index" class="btn btn-outline-primary btn-sm mt-3">
            <i class="fas fa-list me-1"></i> View All Notifications
        </a>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="fw-bold text-dark mb-0">
            <i class="fas fa-bell me-2 text-warning"></i>
            Today's Notifications (@Model.Count)
        </h6>
        <a href="/Notifications/Index" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-external-link-alt me-1"></i> View All
        </a>
    </div>

    <div class="d-flex flex-column gap-3">
        @foreach (var notification in Model)
        {
            <a href="/Notifications/Details/@notification.Id" class="text-decoration-none">
                <div class="card shadow-sm border-0 rounded-4 notification-card clickable-card"
                     data-id="@notification.Id">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="fw-bold text-primary mb-1">
                                    <i class="fas fa-user me-1 text-secondary"></i> @notification.PatientName
                                </h6>
                                <small class="text-muted d-block mb-1">
                                    <i class="far fa-calendar-alt me-1"></i>
                                     @notification.AppointmentDate.ToString("yyyy-MM-dd") 
                                </small>
                                <small class="text-muted d-block mb-1">
                                    <i class="far fa-clock me-1"></i>
                                      @notification.Message 
                                </small>
                                 @if (notification.IsDone)
                                {
                                    <span class="badge bg-success status-badge">
                                        <i class="fas fa-check me-1"></i> Completed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning status-badge">
                                        <i class="fas fa-clock me-1"></i> Scheduled
                                    </span>
                                } 
                            </div>
                            <div class="text-muted">
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>

    <div class="text-center mt-4">
        <a href="/Notifications/Index" class="btn btn-primary">
            <i class="fas fa-list me-2"></i> View Complete Notifications List
        </a>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // إضافة تأثير hover للكارد
            $('.clickable-card').hover(
                function() {
                    $(this).css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );
        });
    </script>
}